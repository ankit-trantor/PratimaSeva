<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:elevation="5dp"
            android:padding="20dp"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_image" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:elevation="4dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:text="Name"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_Phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="Email"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/profile_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="Phone Number"
                android:textColor="#fff"
                android:textSize="14sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_blood"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000"
                android:clickable="true"
                android:elevation="2dp"
                android:padding="10dp"
                android:text="Blood Group" />

            <TextView
                android:id="@+id/profile_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="Address" />

            <TextView
                android:id="@+id/profile_Birthdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="BirthDate" />

            <TextView
                android:id="@+id/profile_Time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="Time" />

            <TextView
                android:id="@+id/profile_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="City" />

            <TextView
                android:id="@+id/profile_state"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="State" />

            <TextView
                android:id="@+id/profile_country"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:textColor="#000"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="Country" />

            <TextView
                android:id="@+id/profile_pincode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#20000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="Pincode" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
